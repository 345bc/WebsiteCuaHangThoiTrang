@model ESHOPPER.Models.AdminViewModel

@{
    ViewBag.Title = "Dashboard Tổng quan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Active = "Dashboard";
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h2 class="text-2xl font-bold text-slate-800">Tổng quan kinh doanh</h2>
        <p class="text-sm text-slate-500">Dữ liệu tính đến ngày @DateTime.Now.ToString("dd/MM/yyyy")</p>
    </div>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6 hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <div class="p-3 bg-blue-50 rounded-lg text-brand-blue">
                <i class="fas fa-dollar-sign text-xl"></i>
            </div>
            <span class="inline-flex items-center gap-1 text-xs font-semibold text-green-600 bg-green-50 px-2 py-1 rounded-full">+12%</span>
        </div>
        <div>
            <p class="text-sm font-medium text-slate-500 mb-1">Tổng doanh thu</p>
            <h3 class="text-2xl font-bold text-slate-800">@Model.TongDoanhThu.ToString("N0") VNĐ</h3>
        </div>
    </div>

    <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6 hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <div class="p-3 bg-purple-50 rounded-lg text-purple-600">
                <i class="fas fa-shopping-bag text-xl"></i>
            </div>
        </div>
        <div>
            <p class="text-sm font-medium text-slate-500 mb-1">Đơn hàng mới</p>
            <h3 class="text-2xl font-bold text-slate-800">@Model.DonHangMoi</h3>
        </div>
    </div>

    <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6 hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <div class="p-3 bg-amber-50 rounded-lg text-amber-600">
                <i class="fas fa-users text-xl"></i>
            </div>
        </div>
        <div>
            <p class="text-sm font-medium text-slate-500 mb-1">Tổng khách hàng</p>
            <h3 class="text-2xl font-bold text-slate-800">@Model.TongKhachHang</h3>
        </div>
    </div>

    <div class="bg-white rounded-xl border border-slate-200 shadow-sm p-6 hover:shadow-md transition-shadow">
        <div class="flex justify-between items-start mb-4">
            <div class="p-3 bg-indigo-50 rounded-lg text-indigo-600">
                <i class="fas fa-box text-xl"></i>
            </div>
        </div>
        <div>
            <p class="text-sm font-medium text-slate-500 mb-1">Tổng sản phẩm</p>
            <h3 class="text-2xl font-bold text-slate-800">@Model.TongSanPham</h3>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <div class="lg:col-span-2 bg-white rounded-xl border border-slate-200 shadow-sm p-6">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-bold text-slate-800">Biểu đồ doanh thu</h3>
        </div>
        <div class="h-80 w-full">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>

    <div class="lg:col-span-1 bg-white rounded-xl border border-slate-200 shadow-sm p-6">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-bold text-slate-800">Tỷ lệ danh mục</h3>
        </div>
        <div class="h-64 w-full flex justify-center">
            <canvas id="categoryPieChart"></canvas>
        </div>
        <div class="mt-6 flex flex-col gap-2">
            @if (Model.ChartLabelDanhMuc != null)
            {
                for (int i = 0; i < Model.ChartLabelDanhMuc.Count; i++)
                {
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-slate-600">@Model.ChartLabelDanhMuc[i]</span>
                        <span class="font-bold text-slate-800">@Model.ChartDataDanhMuc[i]</span>
                    </div>
                }
            }
        </div>
    </div>
</div>

<div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
    <div class="p-4 border-b border-slate-100 bg-slate-50/30 flex justify-between items-center">
        <h3 class="text-lg font-bold text-slate-800">Đơn hàng mới nhất</h3>
        <a href="@Url.Action("index","Order")" class="text-sm font-medium text-brand-blue hover:text-brand-dark transition-colors">Xem tất cả</a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50/50 border-b border-slate-200">
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Mã ĐH</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Khách hàng</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Ngày đặt</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-right">Tổng tiền</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-center">Trạng thái</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-right"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @if (Model.ListDonHangMoi != null)
                {
                    foreach (var item in Model.ListDonHangMoi)
                    {
                        <tr class="hover:bg-blue-50/40 transition-colors group">
                            <td class="px-6 py-4">
                                <span class="text-sm font-bold text-brand-blue">#@item.MaDH</span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="h-8 w-8 rounded-full bg-slate-100 flex items-center justify-center text-xs font-bold text-slate-500 uppercase">
                                        @(item.KhachHang?.TenKH?.Substring(0, 1) ?? "K")
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-slate-700">@(item.KhachHang?.TenKH ?? "Khách vãng lai")</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-slate-600">
                                @(item.NgayDat.HasValue ? item.NgayDat.Value.ToString("dd/MM/yyyy") : "-")
                            </td>
                            <td class="px-6 py-4 text-right">
                                <span class="text-sm font-bold text-slate-700">@((item.TongTien ?? 0).ToString("N0")) ₫</span>
                            </td>
                            <td class="px-6 py-4 text-center">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-700 border border-slate-200">
                                    @item.TrangThai
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <a href="#" class="text-slate-400 hover:text-brand-blue transition"><i class="fas fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#64748B';

        // 1. Line Chart
        var revenueData = @Html.Raw(Json.Encode(Model.ChartDoanhThu));
        var monthLabels = @Html.Raw(Json.Encode(Model.ChartLabelThang));

        const ctxLine = document.getElementById("revenueChart");
        new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: monthLabels,
                datasets: [{
                    label: "Doanh thu",
                    tension: 0.4,
                    backgroundColor: "rgba(59, 130, 246, 0.1)",
                    borderColor: "#3B82F6",
                    borderWidth: 2,
                    pointBackgroundColor: "#ffffff",
                    pointBorderColor: "#3B82F6",
                    pointRadius: 4,
                    fill: true,
                    data: revenueData,
                }],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: {
                        grid: { borderDash: [4, 4], color: '#E2E8F0', drawBorder: false },
                        ticks: { callback: function(value) { return value + ' Tr'; } }
                    },
                    x: { grid: { display: false, drawBorder: false } }
                }
            }
        });

        // 2. Pie Chart
        var catData = @Html.Raw(Json.Encode(Model.ChartDataDanhMuc));
        var catLabels = @Html.Raw(Json.Encode(Model.ChartLabelDanhMuc));

        const ctxPie = document.getElementById("categoryPieChart");
        new Chart(ctxPie, {
            type: 'doughnut',
            data: {
                labels: catLabels,
                datasets: [{
                    data: catData,
                    backgroundColor: ['#3B82F6', '#2DD4BF', '#FBBF24', '#F472B6'],
                    borderWidth: 0
                }],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '75%',
                plugins: { legend: { display: false } }
            }
        });
    </script>
}