@model IEnumerable<ESHOPPER.Models.SanPham>

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Đảm bảo đúng tên Layout bạn đang dùng
}

<style>
    /* CSS riêng cho bảng sản phẩm */
    .product-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #eee;
    }

    .table-modern td {
        vertical-align: middle !important;
    }

    .btn-action {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
        border: none;
    }

        .btn-action:hover {
            transform: translateY(-2px);
        }

    .bg-soft-primary {
        background-color: #FFF0F0;
        color: #D19C97;
    }

    .bg-soft-info {
        background-color: #E0F2F1;
        color: #00897B;
    }

    .bg-soft-danger {
        background-color: #FFEBEE;
        color: #E53935;
    }

    .badge-stock {
        padding: 5px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .badge-active {
        background: #E8F5E9;
        color: #2E7D32;
    }

    .badge-inactive {
        background: #FFEBEE;
        color: #C62828;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="font-weight-bold text-dark mb-0">Danh sách sản phẩm</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent p-0 mb-0 small">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")" class="text-muted">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Sản phẩm</li>
            </ol>
        </nav>
    </div>
    <a href="@Url.Action("Create")" class="btn text-white shadow-sm rounded-pill px-4 font-weight-bold" style="background-color: #D19C97;">
        <i class="fas fa-plus mr-2"></i> Thêm mới
    </a>
</div>

<div class="card border-0 shadow-sm rounded-lg">
    <div class="card-header bg-white border-0 py-3">
        <div class="row align-items-center">
            <div class="col-md-4">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-light border-0"><i class="fas fa-search text-muted"></i></span>
                    </div>
                    <input type="text" class="form-control bg-light border-0 small" placeholder="Tìm tên sản phẩm, mã SP...">
                </div>
            </div>
            <div class="col-md-8 text-md-right mt-3 mt-md-0">
                <div class="btn-group">
                    <button type="button" class="btn btn-light btn-sm border"><i class="fas fa-filter mr-1"></i> Lọc</button>
                    <button type="button" class="btn btn-light btn-sm border"><i class="fas fa-file-export mr-1"></i> Xuất Excel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-modern table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="border-0 py-3" style="width: 5%;">#</th>
                    <th class="border-0 py-3" style="width: 10%;">Ảnh</th>
                    <th class="border-0 py-3" style="width: 30%;">Tên sản phẩm</th>
                    <th class="border-0 py-3">Danh mục</th>
                    <th class="border-0 py-3">Giá bán</th>
                    <th class="border-0 py-3">Trạng thái</th>
                    <th class="border-0 py-3 text-right">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted font-weight-bold">@i</td>
                            <td>
                                <img src="@Url.Content("~/Images/Products/" + (item.AnhSP ?? "no-image.jpg"))"
                                     class="product-img"
                                     alt="@item.TenSanPham"
                                     onerror="this.src='https://placehold.co/50x50?text=No+Img'">
                            </td>
                            <td>
                                <h6 class="mb-0 font-weight-bold text-dark" style="font-size: 0.95rem;">@item.TenSanPham</h6>
                                <small class="text-muted">NCC: @(item.NhaCungCap?.TenNCC ?? "N/A")</small>
                            </td>
                            <td>
                                <span class="badge badge-light border px-2 py-1">
                                    @(item.DanhMucSanPham?.TenDanhMuc ?? "Chưa phân loại")
                                </span>
                            </td>
                            <td class="font-weight-bold text-dark">
                                @String.Format("{0:N0} ₫", item.GiaBanLe)
                            </td>
                            <td>
                                @*@if (item.TrangThai == true)
                                {
                                    <span class="badge badge-stock badge-active">Đang bán</span>
                                }
                                else
                                {
                                    <span class="badge badge-stock badge-inactive">Ngừng bán</span>
                                }*@
                            </td>
                            <td class="text-right">
                                <a href="@Url.Action("Edit", new { id = item.MaSP })" class="btn-action bg-soft-primary" title="Sửa">
                                    <i class="fas fa-pen" style="font-size: 0.8rem;"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id = item.MaSP })" class="btn-action bg-soft-info" title="Chi tiết">
                                    <i class="fas fa-eye" style="font-size: 0.8rem;"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.MaSP })" class="btn-action bg-soft-danger" title="Xóa">
                                    <i class="fas fa-trash" style="font-size: 0.8rem;"></i>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-5 text-muted">
                            <i class="fas fa-box-open fa-3x mb-3 opacity-50"></i>
                            <p>Chưa có sản phẩm nào trong hệ thống.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer bg-white border-0 py-3">
        <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">Hiển thị @Model.Count() sản phẩm</small>

            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item disabled"><a class="page-link" href="#">Trước</a></li>
                    <li class="page-item active"><a class="page-link bg-dark border-dark" href="#">1</a></li>
                    <li class="page-item"><a class="page-link text-dark" href="#">2</a></li>
                    <li class="page-item"><a class="page-link text-dark" href="#">3</a></li>
                    <li class="page-item"><a class="page-link text-dark" href="#">Sau</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>