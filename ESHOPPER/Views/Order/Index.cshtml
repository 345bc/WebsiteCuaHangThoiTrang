@model IEnumerable<ESHOPPER.Models.DonHang>

@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Active = "Donhang"; 
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div>
        <h2 class="text-2xl font-bold text-slate-800">Quản lý đơn hàng</h2>
        <p class="text-sm text-slate-500">Theo dõi và xử lý các đơn đặt hàng từ khách hàng.</p>
    </div>
</div>

<div class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden">
    <div class="p-4 border-b border-slate-100 bg-slate-50/30 flex justify-between items-center">
        <span class="text-sm font-medium text-slate-600">Tổng cộng: <span class="text-brand-blue">@Model.Count()</span> đơn hàng</span>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50/50 border-b border-slate-200">
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Mã ĐH</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Thông tin khách hàng</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Địa chỉ giao hàng</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">Ngày đặt</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider text-right">Tổng tiền</th>
                    <th class="px-6 py-4 text-[11px] font-bold uppercase text-slate-400 tracking-wider">TT Thanh toán</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @foreach (var item in Model)
                {

                    <tr class="hover:bg-blue-50/40 transition-colors group">
                        <td class="px-6 py-4">
                            <span class="text-sm font-bold text-brand-blue">#@item.MaDH</span>
                        </td>

                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <a href="@Url.Action("Details", new {id=item.MaDH})" class="h-9 w-9 rounded-full bg-slate-100 flex items-center justify-center text-xs font-bold text-slate-500 uppercase border border-slate-200">
                                    @(item.TenNguoiNhan != null && item.TenNguoiNhan.Length > 0 ? item.TenNguoiNhan.Substring(0, 1) : "K")
                                </a>
                                <div>
                                    <a href="@Url.Action("Details", new {id=item.MaDH})" class="text-sm font-bold text-slate-700">@item.TenNguoiNhan</a>
                                    <div class="flex items-center gap-1 text-xs text-slate-500 mt-0.5">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                        </svg>
                                        @item.SDTNguoiNhan
                                    </div>
                                </div>
                            </div>
                        </td>

                        <td class="px-6 py-4">
                            <div class="max-w-[200px] text-sm text-slate-600 truncate" title="@item.DiaChiNhan">
                                @item.DiaChiNhan
                            </div>
                        </td>

                        <td class="px-6 py-4">
                            <div class="text-sm text-slate-600">
                                @(item.NgayDat.HasValue ? item.NgayDat.Value.ToString("dd/MM/yyyy") : "-")
                            </div>
                            <div class="text-xs text-slate-400">
                                @(item.NgayDat.HasValue ? item.NgayDat.Value.ToString("HH:mm") : "")
                            </div>
                        </td>

                        <td class="px-6 py-4 text-right">
                            <span class="text-sm font-bold text-slate-800">@string.Format("{0:N0} VNĐ", item.TongTien)</span>
                        </td>

                        <td class="px-6 py-4">
                            @if (item.TrangThai == 0)
                            {
                                <span class="text-xs font-medium text-slate-500 bg-slate-100 px-2 py-1 rounded">
                                    Hủy giao dịch
                                </span>
                            }
                            else if (item.TrangThai == 1)
                            {
                                <span class="text-xs font-medium text-slate-500 bg-slate-100 px-2 py-1 rounded">
                                    Giao dịch thành công
                                </span>
                            }
                            else
                            {
                                <span class="text-xs font-medium text-slate-500 bg-slate-100 px-2 py-1 rounded">
                                    Thanh toán sau  
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.Count() == 0)
        {
            <div class="text-center py-12">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-100 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                </div>
                <h3 class="text-lg font-medium text-slate-900">Chưa có đơn hàng nào</h3>
                <p class="mt-1 text-sm text-slate-500">Các đơn hàng mới sẽ xuất hiện tại đây.</p>
            </div>
        }
    </div>
</div>